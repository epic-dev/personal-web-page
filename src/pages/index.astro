---
import SocialMediaLinks from '../components/socialMediaLinks.astro'
import DefaultLayout from '../layouts/default.astro'
---
<DefaultLayout>
	<main>
		<section class="relative max-w-4xl h-dvh m-auto">
			<div class="absolute inset-0 w-48 m-auto h-[44px] animate-shift-left">
				<div class="relative h-full">
					<div class="animate-bloom absolute left-1/2 -translate-1/2 w-1 h-1 border-l-1 border-black">
						<div class="h-full flex gap-1 whitespace-nowrap flex-col overflow-hidden pl-4 animate-width-rise">
							<p class="text-xl leading-none text-gray-600 font-bold">Pavel Yuruts</p>
							<p>Full-stack developer</p>
						</div>
					</div>
					<SocialMediaLinks />
				</div>
			</div>
		</section>
	</main>
</DefaultLayout>
