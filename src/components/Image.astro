---
interface Props {
  src: string;
  alt: string;
  caption?: string;
}

const { src, alt, caption } = Astro.props;
---

<figure class="my-12 opacity-0 animate-fade-up">
  <img
    src={src}
    alt={alt}
    class="w-full h-auto rounded-lg shadow-sm"
    loading="lazy"
  />
  {
    caption && (
      <figcaption class="mt-3 text-center text-sm text-gray-500 font-medium">
        {caption}
      </figcaption>
    )
  }
</figure>
