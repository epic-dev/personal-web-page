---
import { Image } from 'astro:assets';
import githubIcon from '../images/icons/github.svg';
import instagramIcon from '../images/icons/instagram.svg';
---
<div class="flex gap-4 h-[30px]">
    <a href="https://github.com/epic-dev" rel="noreferrer noopener" target="_blank" class="opacity-0 animate-text-fade-in-2">
        <Image src={githubIcon} alt="github-link" width={24} />
    </a>
    <a href="https://instagram.com/yurutspavel" rel="noreferrer noopener" target="_blank" class="opacity-0 animate-text-fade-in-3">
        <Image src={instagramIcon} alt="instagram-link" width={24} />
    </a>
</div>