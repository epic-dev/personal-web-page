---
import DefaultLayout from "./default.astro";
const { frontmatter } = Astro.props;

const pubDate = new Date(frontmatter.pubDate).toLocaleDateString("en-US", {
  year: "numeric",
  month: "long",
  day: "numeric",
});
---

<DefaultLayout>
  <article class="max-w-3xl mx-auto px-6 py-24 sm:py-32">
    <header class="mb-16 text-center opacity-0 animate-fade-up">
      <div class="mb-6 text-sm font-medium tracking-wider text-gray-500 uppercase">
        {frontmatter.category || "Blog"}
      </div>
      <h1
        class="text-4xl sm:text-5xl lg:text-6xl font-bold tracking-tight text-gray-900 mb-6 leading-tight"
      >
        {frontmatter.title}
      </h1>
      <div class="flex items-center justify-center gap-4 text-gray-500">
        <time datetime={frontmatter.pubDate}>{pubDate}</time>
        {frontmatter.author && (
          <>
            <span>&middot;</span>
            <span>{frontmatter.author}</span>
          </>
        )}
      </div>
    </header>

    <div class="prose prose-lg prose-gray mx-auto opacity-0 animate-fade-up delay-200">
      <slot />
    </div>
  </article>
  <script type="text/plain" data-category="analytics">
    gtag("event", "article_page_loaded");
  </script>
</DefaultLayout>
